{
    "manifest_version": 3,
    "name": "Unboxr",
    "description": "Unboxr is a Chrome extension that allows you to view influencers' unboxing videos, coupons, and promotions as you browser products.",
    "version": "1.0.0",
    "icons": {
        "16": "images/16-unboxr.png",
        "48": "images/48-unboxr.png",
        "128": "images/128-unboxr.png"
    },
    "options_page": "options.html",

    
    "permissions": [
        "tabs",
        "activeTab",
        "storage",
        "alarms"

    ],

    "action": {
        "default_title": "Click Me",  
        "default_popup": "popup.html"
      },

      "content_scripts": [
        {
            "matches": ["*://*.amazon.com/*dp*", "https://www.amazon.com/dp/*"],
            "js": ["product_page_content.js"],
            "run_at": "document_end"

        },
        {
            "matches": ["https://www.amazon.com/*/buy/*", "https://www.amazon.com/gp/buy/shipoptionselect/*", "https://www.amazon.com/gp/buy/spc/*"],
            "js": ["checkout_page_content.js"],
            "run_at": "document_end"
        }
    ]
    
}

