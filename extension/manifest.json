{
    "manifest_version": 3,
    "name": "Unboxr",
    "description": "Unboxr is a Chrome extension that allows you to view influencers' unboxing videos, coupons, and promotions as you browser products.",
    "version": "1.0.0",
    "icons": {
        "16": "images/16-unboxr.png",
        "48": "images/48-unboxr.png",
        "128": "images/128-unboxr.png"
    },
    "options_page": "options.html",
    "permissions": [
        "tabs",
        "activeTab",
        "storage",
        "alarms",
        "identity",
        "identity.email",
        "cookies",
        "webRequest",
        "*://*.google.com/*",
        "http://localhost:*/*"
    ],
    "action": {
        "default_title": "Click Me",
        "default_popup": "popup.html"
    },
    "oauth2": {
        "client_id": "175988724842-gf3n3gpffkq14r2qamaeinudjusn3mch.apps.googleusercontent.com",
        "scopes": [
            "openid",
            "email",
            "profile"
        ]
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.amazon.com/*dp*",
                "https://www.amazon.com/dp/*"
            ],
            "js": [
                "product_page_content.js"
            ],
            "run_at": "document_end"
        },
        {
            "matches": [
                "https://www.amazon.com/*/buy/*",
                "https://www.amazon.com/gp/buy/shipoptionselect/*",
                "https://www.amazon.com/gp/buy/spc/*"
            ],
            "js": [
                "checkout_page_content.js"
            ],
            "run_at": "document_end"
        }
    ],
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "sandbox": {
        "pages": [
            "login.html"
        ]
    },
    "host_permissions": [
        "*://*/*"
    ],
    "content_security_policy": {
        "sandbox": "sandbox allow-scripts allow-forms allow-popups allow-modals;; script-src 'self' *.google.com/*; script-src-elem https://accounts.google.com/gsi/client"
    },
    "key": ""
}