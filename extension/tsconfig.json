{
    "compilerOptions": {
        "jsx": "react",
        "module": "es6",
        "target": "es6",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "resolveJsonModule": true
    },
    "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.json"],
    "exclude": ["node_modules"],
    "typeAcquisition": {
        "enable": true,
        "include": ["react", "react-dom", "chrome"]
    }
}